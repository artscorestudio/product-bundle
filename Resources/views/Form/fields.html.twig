{# ---------------------------------- Search Form Types ---------------------------- #}
{% block asf_search_field_widget %}
{% spaceless %}
    {{ block('choice_widget') }}
{% endspaceless %}
{% endblock %}

{% block search_product_widget %}
{% spaceless %}
    {{ block('asf_search_field_widget') }}
    <script type="text/javascript">
    if ( "undefined" !== typeof jQuery ) {
        (function($, window, document) {
            $(function() {
                $('#{{ form.vars.id }}').asfSearchProduct();
            });
        }(window.jQuery, window, document));
    }
    </script>
{% endspaceless %}
{% endblock %}

{% block search_category_widget %}
{% spaceless %}
    {{ block('asf_search_field_widget') }}
{% endspaceless %}
{% endblock %}

{% block search_brand_widget %}
{% spaceless %}
    {{ block('asf_search_field_widget') }}
{% endspaceless %}
{% endblock %}

{# ---------------------------------- Product Form Type ---------------------------- #}
{% block product_type_errors %}
{% spaceless %}
    {{ block('form_errors')  }}
{% endspaceless %}
{% endblock %}

{% block product_widget %}
{% spaceless %}

    {{ form_errors(form) }}
    
    <div class="row">
        {% if display_brand_field is defined and display_brand_field == true %}
        <div class="col-sm-8">
            {{ form_row(form.name) }}
        </div>
        <div class="col-sm-4">
            {{ form_row(form.brand) }}
        </div>
        {% else %}
        <div class="col-sm-12">
            {{ form_row(form.name) }}
        </div>
        {% endif %}
    </div>
    <div class="row">
        <div class="col-sm-4">
            {{ form_row(form.weight) }}
        </div>
        <div class="col-sm-4">
            {{ form_row(form.capacity) }}
        </div>
        <div class="col-sm-4">
            {{ form_row(form.state) }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            {{ form_row(form.categories) }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <input type="submit" value="{{ 'asf.product.btn.save'|trans }}" class="btn btn-primary" />
        </div>
    </div>
    
{% endspaceless %}
{% endblock %}

