{# ---------------------------------- Product Form Type ---------------------------- #}
{% block product_type_errors %}
{% spaceless %}
    {{ block('form_errors')  }}
{% endspaceless %}
{% endblock %}

{% block product_widget %}
{% spaceless %}

    {{ form_errors(form) }}
    
    <div class="row">
        {% if display_brand_field is defined and display_brand_field == true %}
        <div class="col-sm-8">
            {{ form_row(form.name) }}
        </div>
        <div class="col-sm-4">
            {{ form_row(form.brand) }}
        </div>
        {% else %}
        <div class="col-sm-12">
            {{ form_row(form.name) }}
        </div>
        {% endif %}
    </div>
    <div class="row">
        <div class="col-sm-4">
            {{ form_row(form.weight) }}
        </div>
        <div class="col-sm-4">
            {{ form_row(form.capacity) }}
        </div>
        <div class="col-sm-4">
            {{ form_row(form.state) }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            {{ form_row(form.categories) }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <input type="submit" value="{{ 'asf.product.btn.save'|trans }}" class="btn btn-primary" />
        </div>
    </div>
    
{% endspaceless %}
{% endblock %}

