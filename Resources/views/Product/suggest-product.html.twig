<div class="container-fluid">
	<form>
		<h3>{{ 'asf.product.title.product_from_db'|trans }}</h3>
		<div class="alert alert-info">{{ 'asf.product.text.product_from_db'|trans }}</div>
		
		<div class="row">
			<div class="col-sm-12">
				<table class="table table-bordered table-striped">
					<thead>
						<tr>
							<th></th>
							<th>{{ 'asf.product.product_name'|trans }}</th>
						</tr>
					</thead>
					<tbody>
					{% if products|length > 0 %}
					{% for id,name in products %}
						<tr>
							<td><input type="checkbox" class="selected_product" name="selected_product" value="{{ name }}" /></td>
							<td>{{ name }}</td>
						</tr>
					{% endfor %}
					{% else %}
						<tr>
							<td colspan="2" class="warning">{{ 'asf.product.form.product_no_result'|trans }}</td>
						</tr>
					{% endif %}
					</tbody>
				</table>
			</div>
		</div>
		
		<h3>{{ 'Suggested product name'|trans }}</h3>
		<div class="alert alert-info">{{ 'Otherwise, confirm the information below about your product.'|trans }}</div>
		
		<div class="row">
			<div class="form-group col-sm-4">
				<label>{{ 'asf.product.product_name'|trans }}</label>
				<input type="text" class="form-control product-name" name="product-name" value="{{ product_name }}" />
			</div>
			<div class="form-group col-sm-3">
				<label>{{ 'asf.product.brand_name'|trans }}</label>
				<input type="text" class="form-control brand-name" name="brand-name" value="{{ brand_name }}" />
			</div>
			<div class="form-group col-sm-2">
				<label>{{ 'asf.product.weight'|trans }}</label>
				<input type="text" class="form-control weight" name="weight" value="{{ weight }}" />
			</div>
			<div class="form-group col-sm-3">
				<label>{{ 'asf.product.capacity'|trans }}</label>
				<input type="text" class="form-control capacity" name="capacity" value="{{ capacity }}" />
			</div>
		</div>
		
	</form>
</div>