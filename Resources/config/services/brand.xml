<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
	
		<!-- Brand Manager -->
		<parameter key="asf_product.brand.entity.class">ASF\ProductBundle\Entity\Brand</parameter>
		
		<!-- Forms -->
		<parameter key="asf_product.form.type.brand.class">ASF\ProductBundle\Form\Type\BrandType</parameter>
		<parameter key="asf_product.form.type.search_brand.class">ASF\ProductBundle\Form\Type\SearchBrandType</parameter>
		
    </parameters>

    <services>
        
         <!-- Brand Entity Manager -->
        <service id="asf_product.brand.manager" class="%asf_product.entity.manager.class%">
            <tag name="asf_core.manager" entity="%asf_product.brand.entity.class%" />
        </service>
        
        <!-- Forms -->
        <service id="asf_product.form.factory.product" class="%asf_product.form.factory.class%">
            <argument type="service" id="form.factory" />
            <argument>%asf_product.brand.form.name%</argument>
            <argument>%asf_product.brand.form.type%</argument>
        </service>
        
        <service id="asf_product.form.type.brand" class="%asf_product.form.type.brand.class%">
        	<argument type="service" id="asf_product.brand.manager" />
            <tag name="form.type" alias="brand_type" />
        </service>
        
        <service id="asf_product.form.type.search_brand" class="%asf_product.form.type.search_brand.class%">
        	<argument type="service" id="asf_product.brand.manager" />
            <tag name="form.type" alias="search_brand" />
        </service>
        
    </services>
    
</container>
