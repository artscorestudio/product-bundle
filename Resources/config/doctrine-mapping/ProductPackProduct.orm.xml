<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
	http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
	
	<entity name="ASF\ProductBundle\Entity\ProductPackProduct" table="asf_product_productpack_product">

		<id name="id" type="integer" column="id">
			<generator strategy="AUTO" />
		</id>
		
		<many-to-one field="productPack" target-entity="ProductPack" inversed-by="products">
			<join-column name="product_pack_id" referenced-column-name="id" />
		</many-to-one>
		
		<many-to-one field="product" target-entity="Product">
			<join-column name="product_id" referenced-column-name="id" />
		</many-to-one>

		<field name="order" column="order" type="integer" nullable="true" />

	</entity>
	
</doctrine-mapping>